{% extends "base.twig" %}

{% block title %}{{ isEdit ? 'Edit' : 'Create' }} Ticket - {{ app_name }}{% endblock %}

{% block body %}
<div class="tickets-page">
    <header class="dashboard-header">
        <div class="container">
            <div class="dashboard-nav">
                <a href="/" class="dashboard-logo">
                    <span class="logo-icon">üé´</span>
                    <span class="logo-text">TicketFlow</span>
                </a>
                <div class="dashboard-nav-right">
                    <a href="/dashboard" class="btn btn-secondary">Dashboard</a>
                    <a href="/tickets" class="btn btn-secondary">All Tickets</a>
                    <span class="dashboard-user">üë§ {{ user.name }}</span>
                    <a href="/logout" class="btn btn-secondary">Logout</a>
                </div>
            </div>
        </div>
    </header>

    <main class="tickets-main">
        <div class="container">
            <div class="form-page">
                <div class="form-container">
                    <div class="form-header">
                        <h1 class="form-title">
                            {{ isEdit ? '‚úèÔ∏è Edit Ticket' : '‚ûï Create New Ticket' }}
                        </h1>
                        <p class="form-subtitle">
                            {{ isEdit ? 'Update the ticket information below' : 'Fill in the details to create a new support ticket' }}
                        </p>
                    </div>

                    <form class="ticket-form" method="POST" action="{{ isEdit ? '/tickets/update/' ~ ticket.id : '/tickets' }}">
                        <div class="form-row">
                            <div class="form-group form-group-full">
                                <label for="title" class="form-label">
                                    Title <span class="required">*</span>
                                </label>
                                <input type="text" id="title" name="title" class="form-input"
                                       placeholder="Enter a descriptive title for the ticket"
                                       value="{{ ticket.title ?? '' }}" required maxlength="200">
                                <span class="form-hint">Maximum 200 characters</span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group form-group-full">
                                <label for="description" class="form-label">Description</label>
                                <textarea id="description" name="description" class="form-textarea"
                                          placeholder="Provide a detailed description of the issue or request"
                                          rows="6" maxlength="1000">{{ ticket.description ?? '' }}</textarea>
                                <span class="form-hint">Maximum 1000 characters</span>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="status" class="form-label">
                                    Status <span class="required">*</span>
                                </label>
                                <select id="status" name="status" class="form-select" required>
                                    <option value="open" {{ (ticket.status ?? 'open') == 'open' ? 'selected' : '' }}>Open</option>
                                    <option value="in_progress" {{ (ticket.status ?? '') == 'in_progress' ? 'selected' : '' }}>In Progress</option>
                                    <option value="closed" {{ (ticket.status ?? '') == 'closed' ? 'selected' : '' }}>Closed</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="priority" class="form-label">Priority</label>
                                <select id="priority" name="priority" class="form-select">
                                    <option value="low" {{ (ticket.priority ?? 'medium') == 'low' ? 'selected' : '' }}>Low</option>
                                    <option value="medium" {{ (ticket.priority ?? 'medium') == 'medium' ? 'selected' : '' }}>Medium</option>
                                    <option value="high" {{ (ticket.priority ?? 'medium') == 'high' ? 'selected' : '' }}>High</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-actions">
                            <a href="/tickets" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                {{ isEdit ? 'Update Ticket' : 'Create Ticket' }}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <footer class="dashboard-footer">
        <div class="container">
            <p>¬© 2025 TicketFlow. All rights reserved.</p>
        </div>
    </footer>
</div>
{% endblock %}
